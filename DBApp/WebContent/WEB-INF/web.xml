<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
	
	<context-param>
		<param-name>driver</param-name>
		<param-value>oracle.jdbc.driver.OracleDriver</param-value>
	</context-param>
	
	
	<context-param>
		<param-name>dburl</param-name>
		<param-value>jdbc:oracle:thin:@localhost:1521:xe</param-value>
	</context-param>

	<context-param>
		<param-name>dbuser</param-name>
		<param-value>system</param-value>
	</context-param>

	<context-param>
		<param-name>dbpwd</param-name>
		<param-value>manager1</param-value>
	</context-param>

	<servlet>
		<servlet-name>err</servlet-name>
		<servlet-class>com.rr.servlet.ErrorServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>err</servlet-name>
		<url-pattern>/eurl</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>abc</servlet-name>
		<servlet-class>com.rr.servlet.DBServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>abc</servlet-name>
		<url-pattern>/dburl</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>head</servlet-name>
		<servlet-class>com.rr.servlet.HeaderServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>head</servlet-name>
		<url-pattern>/headurl</url-pattern>
	</servlet-mapping>
	
	
	<welcome-file-list>
		<welcome-file>input.html</welcome-file>
	</welcome-file-list>

</web-app>